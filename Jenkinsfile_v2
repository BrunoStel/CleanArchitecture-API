def verifyPathBFF(){
  dir ('pathsModified') {
    if (fileExists('app-backend.txt')){
        return true
    }else {
      echo "Mandandno mensagem sobre sonar BFF"
    }
  }
}

def verifyPathMobile(){
  dir ('pathsModified') {
    if (fileExists('app-mobile.txt')){
      return true
    }else {
      echo "Mandandno mensagem sobre sonar mobile"
    }
      
  }
}
def verifyFilesModified(){
  sh """chmod a+x filesModified.sh && ./filesModified.sh"""
}
def gitLeaksRun(){
  try{
    sh(returnStdout: true, script: "docker run --rm -v ${pwd()}:/app zricethezav/gitleaks:latest detect --no-git --verbose --source=/src/ ")
  }catch(error){
  }
}

pipeline {
    agent any
    stages{
        stage('Gitleaks Analysis'){
          steps{
              script{
                gitLeaksRun()
              }
          }
        }
        stage('Sonar - BFF') {
          when {
              expression { verifyPathBFF() } 
          }
          steps {
              echo "RODANDO SONAR BFF"
          }
        }
        stage('Sonar - Mobile') {
          when {
              expression { verifyPathMobile() } 
          }
          steps {
              echo "RODANDO SONAR MOBILE"
          }
        }
        stage('Delete dir'){
          steps{
            script{
              deleteDir()
            }
          }
        }
    }
}
